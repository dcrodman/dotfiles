export HISTSIZE=99999
export SAVEHIST=$HISTSIZE
export HISTFILE=~/.zhistory
export CLICOLOR=1

#### Antigen Stuff ####
source ~/.antigen_lnk/antigen.zsh

antigen use oh-my-zsh

antigen bundle git
antigen bundle brew
antigen bundle sublime
antigen bundle python
antigen bundle ruby
antigen bundle encode64
antigen bundle httpie

# antigen bundle yous/lime
# antigen theme gianu
antigen theme geoffgarside

antigen apply

#### Aliases ####
alias shidden='defaults write com.apple.finder AppleShowAllFiles YES; killall Finder'
alias hhidden='defaults write com.apple.finder AppleShowAllFiles NO; killall Finder'

alias em='env SHELL=/usr/local/bin/zsh emacs'
alias tn='tmux new'
alias ta='tmux attach #'

alias mysqlstart='mysql.server start'
alias mysqlstop='mysql.server stop'

# Path definitions are here so that OSX's path_helper doesn't ruin things
export PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/bin:/usr/sbin:/sbin
export PATH=${PATH}:/opt/X11/include:/opt/X11/bin

#### Load zsh scripts from zsh/ directory ####
# Source everything from the zsh folder
# for f in ~/.dotfiles/zsh/*.zsh; do
#     source $f
# done

#### Load dotfiles_local zsh cfongis ####
# Source a local zshrc if it exists.
if [ -f ~/.zshrc_local ]; then
    source ~/.zshrc_local
fi

#### Set up Pyenv ####
eval "$(pyenv init -)"

