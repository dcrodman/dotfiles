[color]
	ui = auto

[merge]
	conflictstyle = diff3

[alias]
	br = branch -v
	ch = checkout
	st = status
	rb = rebase
	rbc = rebase --continue
	staged = diff --cached
	spush = push --recurse-submodules=on-demand
	supd = submodule update --remote --merge
	fw = !git commit -qam 'fix whitespace' && git rebase -q --whitespace=fix HEAD~ && git reset -q HEAD~

[interactive]
	singlekey = true

[push]
	default = current

[core]
	excludesfile = ~/.gitignore
	ignorecase = false
	editor = vim

[include]
	path = ~/.gitconfig_local

[mergetool]
	keepBackup = false
[pull]
	rebase = true
